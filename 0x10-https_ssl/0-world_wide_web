#!/usr/bin/env bash

domain="$1";
subdomain="$2";
subs=("www" "web-01" "web-02" "lb-01");

printer (){
    echo -e "The subdomain $1 is a $2 record and points to $3"
}

info(){
    domain=$1;
    subdomain=$2;
    Answar=$(dig "${domain}" | grep "ANSWER SECTION" | awk 'NR>1')
    type=$( echo "$(Answar)" | awk {print $4})
    displayResults "$subdomain" "$type"
}


if ( -z "subdomain" ); then
    for sub in "${subs[@]}"; do
        info "${sub}"."${domain}" $"{sub}"
    done
else
    info "${subdomain}"."${domain}" "${subdomain}"
fi
